# EchoOps CRM Production Environment Variables
# Copy this file to .env.production and update with your production values

# Database Configuration
POSTGRES_DB=echoops_crm
POSTGRES_USER=echoops_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_FOR_PRODUCTION

# JWT Configuration (CRITICAL: Change these in production!)
JWT_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING_FOR_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING_FOR_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=https://api.your-domain.com
VITE_APP_NAME=EchoOps CRM
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Database Admin Configuration
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# Redis Commander Configuration
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD

# Application URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com
ADMIN_URL=https://admin.your-domain.com
