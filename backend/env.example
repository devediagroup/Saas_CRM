# =================================================================
# EchoOps CRM Environment Configuration
# =================================================================
# IMPORTANT: This is a template file. Copy this to .env and fill in actual values.
# NEVER commit .env files to version control!

# =================================================================
# Database Configuration
# =================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_strong_database_password_here
DB_DATABASE=echoops_crm_db

# =================================================================
# Application Configuration
# =================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# =================================================================
# JWT Configuration (SECURITY CRITICAL)
# =================================================================
# Generate strong secrets with: openssl rand -hex 64
# NEVER use default values in production!
JWT_SECRET=REPLACE_WITH_64_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=REPLACE_WITH_ANOTHER_64_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_64
JWT_REFRESH_EXPIRES_IN=7d

# =================================================================
# CORS Configuration
# =================================================================
CORS_ORIGIN=http://localhost:5173

# =================================================================
# Rate Limiting
# =================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =================================================================
# File Upload Configuration
# =================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# =================================================================
# Redis Configuration (Optional for caching)
# =================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =================================================================
# Email Configuration (SMTP)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =================================================================
# WhatsApp Business API Configuration (Optional)
# =================================================================
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_API_URL=https://graph.facebook.com/v17.0

# =================================================================
# Logging Configuration
# =================================================================
LOG_LEVEL=info

# =================================================================
# Encryption Configuration (SECURITY CRITICAL)
# =================================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_SECRET_FROM_OPENSSL_RAND_HEX_32

# =================================================================
# API Documentation
# =================================================================
API_DOCS_ENABLED=true
